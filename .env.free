# ============================================
# SHOPSMART PRO - FREE TIER CONFIGURATION
# Copy this to .env and fill in your values
# ============================================

# ===================
# SERVER CONFIG
# ===================
NODE_ENV=production
PORT=5000

# ===================
# DATABASE (MongoDB Atlas FREE M0)
# ===================
# Get from: mongodb.com/cloud/atlas
# 1. Create FREE cluster (M0 Sandbox)
# 2. Create database user
# 3. Whitelist 0.0.0.0/0
# 4. Get connection string
MONGODB_URI=mongodb+srv://YOUR_USER:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/shopsmart-pro?retryWrites=true&w=majority

# ===================
# JWT AUTH
# ===================
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=paste-your-generated-secret-here
JWT_EXPIRE=30d

# ===================
# FRONTEND URL
# ===================
# Your Vercel/Netlify URL
FRONTEND_URL=https://your-app.vercel.app

# ===================
# KEEP-ALIVE (Prevent Sleep)
# ===================
# Set this to your Render URL to prevent free tier sleep
# Example: https://shopsmart-api.onrender.com
API_URL=https://your-api.onrender.com

# ===================
# REDIS CACHE (Optional - Upstash FREE)
# ===================
# Get from: upstash.com
# Set to false to use in-memory cache (recommended for free tier)
ENABLE_REDIS_CACHE=false
REDIS_URL=

# If using Upstash REST API:
# UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
# UPSTASH_REDIS_REST_TOKEN=xxx

# ===================
# RATE LIMITING
# ===================
# Use memory store for free tier
ENABLE_RATE_LIMIT_REDIS=false

# ===================
# EMAIL (Resend FREE - 100/day)
# ===================
# Get from: resend.com
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM=onboarding@resend.dev

# OR use SendGrid (100/day free)
# SENDGRID_API_KEY=SG.xxxxxxxxxxxx
# EMAIL_FROM=noreply@yourdomain.com

# ===================
# SMS (Twilio Trial - $15 credit)
# ===================
# Get from: twilio.com (trial account)
# Note: Trial can only send to verified numbers
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx

# ===================
# WHATSAPP (Optional)
# ===================
# For WhatsApp, use Twilio or Meta Business API
# WHATSAPP_ENABLED=false

# ===================
# n8n AUTOMATION
# ===================
# Get from: n8n.cloud (5 free workflows)
N8N_WEBHOOK_URL=https://your-instance.app.n8n.cloud/webhook/
N8N_API_KEY=

# ===================
# FILE UPLOADS
# ===================
# For free tier, store locally
# Later upgrade to Cloudinary/S3
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# ===================
# FEATURE FLAGS (Disable for FREE tier)
# ===================
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_WHATSAPP_NOTIFICATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ANALYTICS=true
ENABLE_CACHING=false

# ===================
# MONITORING (Optional)
# ===================
# BetterStack (free tier): betterstack.com
# BETTERSTACK_SOURCE_TOKEN=

# Sentry (free tier): sentry.io
# SENTRY_DSN=
