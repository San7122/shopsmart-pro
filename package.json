{
  "name": "shopsmart-pro",
  "version": "1.0.0",
  "description": "All-in-one platform for local shopkeepers - Apni Dukaan, Smart Dukaan",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "cd client && npm run build",
    "start": "cd server && npm start"
  },
  "keywords": [
    "kirana",
    "shopkeeper",
    "inventory",
    "ledger",
    "pos",
    "india"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "bcryptjs": "^3.0.3",
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.4"
  }
}
